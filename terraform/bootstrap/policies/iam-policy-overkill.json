{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BootstrapTerraformAdmin",
      "Effect": "Allow",
      "Action": [
        "s3:*",
        "dynamodb:*",
        "dynamodb:TagResource",
        "kms:CreateKey",
        "kms:DescribeKey",
        "kms:ListAliases",
        "kms:CreateAlias",
        "kms:TagResource",
        "kms:EnableKeyRotation",
        "iam:CreatePolicy",
        "iam:PassRole",
        "iam:GetRole",
        "iam:ListRoles",
        "iam:CreatePolicyVersion",
        "iam:DeletePolicyVersion",
        "iam:ListPolicies"
      ],
      "Resource": "*"
    },
    {
      "Sid": "TerraformBackendAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem",
        "dynamodb:DescribeTable",
        "kms:Decrypt",
        "kms:GenerateDataKey",
        "kms:Encrypt",
        "kms:DescribeKey"
      ],
      "Resource": [
        "arn:aws:s3:::kinect-terraform-state",
        "arn:aws:s3:::kinect-terraform-state/*",
        "arn:aws:dynamodb:us-east-1:891377181070:table/kinect-terraform-locks",
        "arn:aws:kms:us-east-1:891377181070:key/95c3ed54-e836-48a5-9bd6-5ea8fff56126"
      ]
    },
    {
      "Sid": "EKSClusterReadAccess",
      "Effect": "Allow",
      "Action": [
        "eks:DescribeCluster",
        "eks:ListClusters"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EKSAndNetworkingAdminAccess",
      "Effect": "Allow",
      "Action": [
        "ec2:*",
        "eks:*",
        "iam:TagRole",
        "iam:TagPolicy",
        "iam:CreateRole",
        "iam:CreateInstanceProfile",
        "iam:AttachRolePolicy",
        "iam:PutRolePolicy",
        "logs:CreateLogGroup",
        "logs:DescribeLogGroups",
        "logs:PutRetentionPolicy"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EKSAdditionalIAMAndLogsAccess",
      "Effect": "Allow",
      "Action": [
        "logs:TagResource",
        "iam:ListRolePolicies",
        "iam:GetPolicy",
        "iam:GetRolePolicy",
        "iam:ListAttachedRolePolicies",
        "iam:GetPolicyVersion"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EKSFinalReadPermissions",
      "Effect": "Allow",
      "Action": [
        "iam:ListPolicyVersions",
        "logs:ListTagsForResource"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EKSDeletePolicyPermission",
      "Effect": "Allow",
      "Action": [
        "iam:DeletePolicy"
      ],
      "Resource": "*"
    }
  ]
}
