{
  "name": "accounts-api",
  "version": "0.1.0",
  "description": "Accounts API - GraphQL subgraph service for accounts management",
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && npm run start\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@apollo/subgraph": "^2.11.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "graphql",
    "apollo",
    "subgraph",
    "federation",
    "aws",
    "eks"
  ],
  "author": "sdrandr",
  "license": "UNLICENSED",
  "private": true
}